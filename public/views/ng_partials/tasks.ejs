<form class="well" (submit)="addTask($event)"><div class="form-group"><input type="text" [(ngModel)]="title" name="title" class="form-control" placeholder="Add Task"></div></form><div class="task-list"><div *ngFor="let task of tasks" class="row"><div class="col-sm-3 col-md-3"><input type="checkbox" [checked]="task.isDone" (click)="updateStatus(task)"></div><div class="col-sm-8 col-md-8">{{task.title}}</div><div class="col-sm-1 col-md-1"><input type="button" class="btn btn-danger" (click)="deleteTask(task._id)" value="Delete"></div><br><br></div><ngb-alert class="col-md-10" type="success" [dismissible]="true">Alert</ngb-alert><div class="col-md-2"><button type="button" class="btn btn-warning" (click)="onClick(event)">My Second Button</button></div><div class="col-md-12"><auction-app> </auction-app></div></div>